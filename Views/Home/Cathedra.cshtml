@model IEnumerable<Lab_6.Models.Cathedra>

@{
    ViewBag.Title = "Cathedras";
}

<h2>Cathedras</h2>

<p>
    @Html.ActionLink("Create New", "CreateCathedra");
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditCathedra", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "DeleteCathedra", new { id = item.ID })
            </td>
        </tr>
    }

</table>